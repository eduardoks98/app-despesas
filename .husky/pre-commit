#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

echo "ğŸ” Running pre-commit checks..."

# Run lint-staged
npx lint-staged

# Check if any changes were made by lint-staged
if [ -n "$(git diff --staged --name-only)" ]; then
  echo "âœ… Pre-commit checks passed!"
else
  echo "âŒ No staged files to check"
  exit 1
fi