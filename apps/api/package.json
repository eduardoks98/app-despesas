{
  "name": "@app-despesas/api",
  "version": "1.0.0",
  "description": "API Premium para App Despesas com MySQL e sincronização",
  "main": "dist/server.js",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "test": "jest",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "type-check": "tsc --noEmit",
    "lint": "eslint src --ext .ts,.js",
    "lint:fix": "eslint src --ext .ts,.js --fix",
    "format": "prettier --write \"src/**/*.{ts,js}\"",
    "clean": "rm -rf node_modules && rm -rf dist",
    "migrate": "tsx src/database/migrate.ts",
    "migrate:test": "NODE_ENV=test tsx src/database/migrate.ts",
    "seed": "tsx src/database/seed.ts",
    "seed:test": "NODE_ENV=test tsx src/database/seed.ts"
  },
  "dependencies": {
    "express": "^4.18.2",
    "mysql2": "^3.6.0",
    "jsonwebtoken": "^9.0.2",
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "express-rate-limit": "^7.1.5",
    "stripe": "^14.8.0",
    "node-cron": "^3.0.3",
    "uuid": "^9.0.1",
    "joi": "^17.11.0",
    "dotenv": "^16.3.1",
    "date-fns": "^2.30.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.0.0",
    "@types/bcrypt": "^5.0.2",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/cors": "^2.8.16",
    "@types/uuid": "^9.0.7",
    "@types/jest": "^29.0.0",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.6",
    "tsx": "^4.6.0",
    "typescript": "^5.1.3",
    "jest": "^29.0.0"
  },
  "private": true
}