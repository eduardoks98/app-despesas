{
  "name": "@app-despesas/api",
  "version": "1.0.0",
  "description": "API Premium para App Despesas com MySQL e sincronização",
  "main": "dist/server.js",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "test": "jest",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "type-check": "tsc --noEmit",
    "lint": "eslint src --ext .ts,.js",
    "lint:fix": "eslint src --ext .ts,.js --fix",
    "format": "prettier --write \"src/**/*.{ts,js}\"",
    "clean": "rm -rf node_modules && rm -rf dist",
    "migrate": "tsx src/scripts/migrate.ts",
    "migrate:up": "tsx src/scripts/migrate.ts up",
    "migrate:status": "tsx src/scripts/migrate.ts status",
    "migrate:rollback": "tsx src/scripts/migrate.ts rollback",
    "seed": "tsx src/scripts/seed.ts",
    "seed:run": "tsx src/scripts/seed.ts run",
    "seed:status": "tsx src/scripts/seed.ts status",
    "seed:reset": "tsx src/scripts/seed.ts reset",
    "db:setup": "npm run migrate:up && npm run seed:run",
    "db:reset": "npm run seed:reset && npm run migrate:up && npm run seed:run",
    "db:fresh": "npm run db:reset"
  },
  "dependencies": {
    "bcrypt": "^5.1.1",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "date-fns": "^2.30.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-mongo-sanitize": "^2.2.0",
    "express-rate-limit": "^7.1.5",
    "express-session": "^1.17.3",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "hpp": "^0.2.3",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "mysql2": "^3.6.0",
    "node-cron": "^3.0.3",
    "stripe": "^14.8.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "uuid": "^9.0.1",
    "winston": "^3.11.0",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.16",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.0.0",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.19.9",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.6",
    "@types/uuid": "^9.0.7",
    "jest": "^29.0.0",
    "tsx": "^4.6.0",
    "typescript": "^5.1.3"
  },
  "private": true
}
